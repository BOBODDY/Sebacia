<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.derma.sebacia.ui.SurveyResultsFragment">

    <TextView
        android:id="@+id/survey_results_txt_expl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/survey_results_explanation"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/survey_results_txt_lvltxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/survey_results_txt_expl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/common_acne_lvl"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/survey_results_txt_lvlnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/survey_results_txt_lvltxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/common_0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <Button
        android:id="@+id/survey_results_btn_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/survey_results_txt_lvlnum"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.33"
        android:background="@drawable/mybutton"
        android:text="@string/common_recommendation"
        android:textColor="@color/gold1" />

</RelativeLayout>
