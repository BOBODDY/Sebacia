<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.derma.sebacia.ui.SurveyTutorialFragment">

    <TextView
        android:id="@+id/survey_turorial_txt_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/survey_tutorial_instructions"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15dp" />

    <Button
        android:id="@+id/survey_turorial_btn_ok"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/survey_turorial_txt_txt"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_weight="0.33"
        android:background="@drawable/mybutton"
        android:text="@string/survey_tutorial_take"
        android:textColor="@color/gold1" />

</RelativeLayout>
