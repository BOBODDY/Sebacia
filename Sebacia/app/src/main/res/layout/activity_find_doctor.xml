<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gold3"
    tools:context="com.derma.sebacia.ui.FindDoctorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finddoc_title_string"
        android:textSize="24sp"
        android:id="@+id/finddoc_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finddoc_level"
        android:textSize="24sp"
        android:id="@+id/finddoc_level"
        android:layout_below="@+id/finddoc_title"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finddoc_level_txt"
        android:layout_below="@+id/finddoc_title"
        android:layout_toRightOf="@+id/finddoc_level"
        android:layout_toEndOf="@+id/finddoc_level"
        android:textSize="24sp"
        android:paddingLeft="5dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_below="@+id/finddoc_level"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="24sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Doc"
        android:id="@+id/emailDoc"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@android:id/list"
        android:layout_alignEnd="@android:id/list"
        android:onClick="sendEmail" />


</RelativeLayout>
