<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gold3"
    tools:context="com.derma.sebacia.PrivacyActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="433dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/textView" />
            </ScrollView>
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/button_holder">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_disagree"
                android:id="@+id/button"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/button2"
                android:layout_weight="0.15"
                android:layout_gravity="bottom"
                android:background="@color/black"
                android:textColor="@color/gold1"
                android:layout_marginRight="0.15dp"
                android:singleLine="true"
                android:onClick="closeApp"
                android:nestedScrollingEnabled="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_agree"
                android:id="@+id/button2"
                android:layout_below="@+id/scrollView"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                android:layout_marginLeft="15dp"
                android:background="@color/black"
                android:textColor="@color/gold1"
                android:layout_weight=".80"
                android:layout_gravity="bottom"
                android:onClick="startMainFromPriv" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
