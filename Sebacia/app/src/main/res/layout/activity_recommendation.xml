<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/gold3"
    tools:context="com.derma.sebacia.ui.DetailsActivity"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/recommendation_img_history"
            android:layout_weight="0.7"
            android:contentDescription="@string/recommendation_img_history_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAlignment="center"
            android:layout_weight="0.1"
            android:id="@+id/recommendation_acne_short_detail"
            android:textColor="@color/black" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/recommendation_recommendation"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/recommendation_txt_rec"
            android:textColor="@color/black" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_find_doctor"
            android:id="@+id/recommendation_btn_finddoc"
            android:layout_below="@+id/recommendation_txt_rec"
            android:background="@drawable/mybutton"
            android:textColor="@color/gold1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/main_btn_prog"
            android:id="@+id/recommendation_btn_prog"
            android:layout_below="@+id/recommendation_btn_finddoc"
            android:background="@drawable/mybutton"
            android:textColor="@color/gold1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
</LinearLayout>
