<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/app"
    android:background="@color/gold3"
    android:focusable="false">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/main_btn_cam"
        android:src="@drawable/cameraclipart"
        android:contentDescription="@string/main_btn_cam"
        android:background="@color/gold3"
        android:textColor="@color/gold1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_btn_prog"
        android:id="@+id/main_btn_prog"
        android:layout_marginTop="56dp"
        android:background="@drawable/mybutton"
        android:textColor="@color/gold1"
        android:layout_below="@+id/main_btn_cam"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
